	<!-- PART II : changing storage container and player backpack sizes -->
	
	<!-- we set max 25x15 for 21:9 resolutions, standard 16:9 can only have 13x15 -->
		
	<!-- Looting window : here the MAX allowed is set --> <!-- vanilla:                                10 9 -->
	<set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@rows">25</set>
	<set xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/@cols">15</set>
	
	<!-- Vehicle Storage window : here the MAX allowed is set --> <!-- vanilla:             10 9 -->
	<set xpath="/windows/window[@name='windowVehicleStorage']/grid[@name='inventory']/@rows">25</set>
	<set xpath="/windows/window[@name='windowVehicleStorage']/grid[@name='inventory']/@cols">15</set>
	
